@model AdminPortal.Models.LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="row w-100 justify-content-center">
        <div class="col-md-4 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                        <h2 class="fw-bold">Admin Portal</h2>
                        <p class="text-muted">Sign in to access the admin panel</p>
                    </div>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Identifier" class="form-label">
                                <i class="fas fa-user me-2"></i>Username / National ID
                            </label>
                            <input asp-for="Identifier" class="form-control form-control-lg" placeholder="Enter your identifier" />
                            <span asp-validation-for="Identifier" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

